@model IEnumerable<WorthIt.Models.Product>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Smarthones List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add New Smarthone
            </a>

        </div>
    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100% ">
            <thead>
                <tr>
                    <th>
                        Smartphone Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Brand
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td widht="30%">
                        @obj.Name
                    </td>
                    <td widht="25%">
                        @obj.Price
                    </td>
                    <td widht="25%">
                        @obj.Category.Name
                    </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-warning mx-2">
                                <i class="far fa-edit"></i> &nbsp; Edit

                            </a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt"></i> &nbsp; Delete
                            </a>
                        </div>

                    </td>

                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Product Exixts.</p>
    }

</div>



