@model IEnumerable<WorthIt.Models.Category>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Brand List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; New Brand
            </a>
           
        </div>
    </div>
    
    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100% ">
            <thead>
                <tr>
                    <th>
                        Brand Name
                    </th>
                    <th>
                        Brand Number
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td widht="50%">
                        @obj.Name
                    </td>
                    <td widht="30%">
                        @obj.DisplayOrder
                    </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-route-Id="@obj.Id"asp-action="Edit" class="btn btn-warning mx-2">
                                <i class="far fa-edit"></i> &nbsp; Edit

                            </a>
                            <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt"></i> &nbsp; Delete
                            </a>
                        </div>
                        
                    </td>

                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Brands Exixts.</p>
    }

</div>


